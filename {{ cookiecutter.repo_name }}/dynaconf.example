#!/bin/sh

PROJECT_NAME="{{ cookiecutter.project_name.upper() }}"

#   Database creation step-by-step:
# 1 - $ createuser -P {{ cookiecutter.project_name }}
# 2 - $ createdb {{ cookiecutter.project_name }} -O {{ cookiecutter.project_name }}
export "${PROJECT_NAME}_DATABASE_URL"="postgres://{{ cookiecutter.project_name }}:{{ cookiecutter.project_name }}@localhost:5432/{{ cookiecutter.project_name }}"
export "${PROJECT_NAME}_SECRET_KEY"="$(openssl rand -base64 64)"